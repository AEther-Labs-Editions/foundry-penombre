                <div class="de-de-nuit absolue">
                  <img class="click de-nuit" src="{{getDiceImage nuit}}" data-action="jetHarmonique" data-harmonique="nuit"/>
                </div>
              {{/if}}
            </div>
            <br />&nbsp;<br />
            <div class="text-gros-1 draggable jetHarmonique" data-harmonique="nuit">
              {{localize "PENOMBRE.ui.nuit"}}
