{{!log "harmoniques" this}}
<div class="eminence-harmoniques flexible">
  <div class="col-1-1 text-vertical-harmoniques">{{localize "PENOMBRE.ui.section.harmoniques"}}</div>
  <div class="col-2-1 frise-verticale">
    <img class="" src="/systems/penombre/assets/ui/grise.webp" />
