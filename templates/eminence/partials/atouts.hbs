{{log "EminenceSheet - Partials - Atouts" this }}
<div class="eminence-atouts{{#if isStyleJeuAvance}}-2{{/if}}">
    <span class="titre-section-atouts">{{localize "PENOMBRE.ui.atouts"}}</span>
    <div class="content">
        <div class="potentiel">
            <div class="div-potentiel">
                <span class="absolue">{{localize "PENOMBRE.ui.potentiel"}}</span>
                {{#if unlocked}}
                <select name="system.potentiel.atouts" class="val-potentiel-saisie absolue">
                    {{selectOptions potentielChoices selected=systemSource.potentiel.atouts localize=true}}
                </select>
                {{else}}
                <div class="val-potentiel absolue">{{system.potentiel.atouts}}</div>
                {{/if}}
                <img class="img-potentiel absolue" src="systems/penombre/assets/ui/potentiel_creux.png" alt="|" />
            </div>
        </div>

        <div class="atouts{{#if isStyleJeuAvance}}-2{{/if}} absolue">
            <table class="item-list centpourcent">
                <tr class="centpourcent">
                    <th>
                        {{ localize 'PENOMBRE.ui.atoutNom' }}
                    </th>
                    <th>

                    </th>
                    <th class="item-controls">

                    </th>
                </tr>
                {{#each atouts as |item id|}}
                <tr class="item">
                    <td>
                        <span class="item-name">{{item.name}}</span>
                    </td>
                    <td>
                        <input type="item-valeur">{{item.valeur}}</span>
                    </td>
                    <td class="item-controls">
                        <a class="item-control" title="{{ localize 'PENOMBRE.ui.atoutEdit' }}" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control" title="{{ localize 'PENOMBRE.ui.atoutDelete' }}" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </table>
            <span class="plusitem">
                <a class="item-control" title="{{ localize 'PENOMBRE.ui.atoutCreate' }}" data-action="create" data-type="atout"><i class="fas fa-plus"></i> {{ localize "PENOMBRE.ui.atoutCreate" }}</a>
            </span> 
        </div>

    </div>
</div>