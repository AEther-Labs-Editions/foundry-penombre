{{log "EminenceSheet - Partials - Pouvoirs" this }}
<div class="eminence-pouvoirs">
    <span class="titre-section-pouvoirs">{{localize "PENOMBRE.ui.pouvoirs"}}</span>
    <div class="content">
        <div class="potentiel">
            <div class="div-potentiel">
                <span class="absolue">{{localize "PENOMBRE.ui.potentiel"}}</span>
                {{#if unlocked}}
                <select name="system.potentiel.pouvoirs" class="val-potentiel-saisie absolue">
                    {{selectOptions potentielChoices selected=systemSource.potentiel.pouvoirs localize=true}}
                </select>
                {{else}}
                <div class="val-potentiel absolue">{{system.potentiel.pouvoirs}}</div>
                {{/if}}
                <img class="img-potentiel absolue" src="systems/penombre/assets/ui/potentiel_creux.png" alt="|" />
            </div>
        </div>
        <div class="pouvoirs absolue">
            {{#each pouvoirs as |pouvoir|}}
                <div class="ligne-pouvoir">
                    <input type="checkbox" {{#if pouvoir.system.utilise}}checked{{/if}}></input>
                    <label>{{pouvoir.name}}</label>
                    <div>{{pouvoir.system.description}}</div>
                    <div>{{localize (concat 'PENOMBRE.Pouvoir.type.' pouvoir.system.type '.label')}}</div>
                </div>
            {{/each}}
        </div>
    </div>
</div>