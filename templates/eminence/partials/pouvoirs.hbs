{{!log "EminenceSheet - Partials - Pouvoirs" this }}
<div class="eminence-pouvoirs{{#if isStyleJeuAvance}}-2{{/if}}">
    <span class="titre-section-pouvoirs">{{localize "PENOMBRE.ui.pouvoirs"}}</span>
    <div class="content">
        <div class="potentiel">
            <div class="div-potentiel">
                <span class="absolue">{{localize "PENOMBRE.ui.potentiel"}}</span>
                {{#if unlocked}}
                <select name="system.potentiel.pouvoirs" class="val-potentiel-saisie absolue">
                    {{selectOptions potentielChoices selected=systemSource.potentiel.pouvoirs localize=true}}
                </select>
                {{else}}
                <div class="val-potentiel absolue">{{system.potentiel.pouvoirs}}</div>
                {{/if}}
                <img class="img-potentiel absolue" src="systems/penombre/assets/ui/potentiel_creux.png" alt="|" />
            </div>
        </div>
        <div class="pouvoirs{{#if isStyleJeuAvance}}-2{{/if}} absolue">
            <table class="item-list centpourcent">
                <tr class="centpourcent">
                    <th class="item-coche">
                    </th>
                    <th>
                        {{ localize 'PENOMBRE.ui.nom' }}
                    </th>
                    <th>
                        {{ localize 'PENOMBRE.ui.type' }}
                    </th>
                    <th class="item-controls">
                        {{#if unlocked}}
                            <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.create' item='un pouvoir' }}" data-action="create" data-type="pouvoir"><i class="fas fa-plus"></i></a>
                        {{/if}}
                    </th>
                </tr>
                {{#each pouvoirs as |item id|}}
                <tr class="item">
                    <td class="item-coche">
                        <img class="item-case" src="systems/penombre/assets/ui/transp_case_{{#if item.system.utilise}}checked{{else}}unchecked{{/if}}.png"></img>
                    </td>
                    <td>
                        <span class="item-name" data-tooltip="{{{item.system.description}}}">{{item.name}}</span>
                    </td>
                    <td>
                        <span class="item-type">{{ localize (concat 'PENOMBRE.Pouvoir.type.' item.system.type '.label') }}</span>
                    </td>
                    <td class="item-controls">
                    {{#if ../unlocked}}
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.edit' }}" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.delete' }}" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                    {{/if}}
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</div>