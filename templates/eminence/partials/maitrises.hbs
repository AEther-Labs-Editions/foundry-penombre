{{!log "EminenceSheet - Partials - Maîtrises" this }}
<div class="eminence-maitrises{{#if isStyleJeuAvance}}-2{{/if}}">
    <span class="titre-section-maitrises">{{localize "PENOMBRE.ui.maitrises"}}</span>
    <div class="content">
        <div class="potentiel">
            <div class="div-potentiel">
                <span class="absolue">{{localize "PENOMBRE.ui.potentiel"}}</span>
                {{#if unlocked}}
                <select name="system.potentiel.maitrises" class="val-potentiel-saisie absolue">
                    {{selectOptions potentielChoices selected=systemSource.potentiel.maitrises localize=true}}
                </select>
                {{else}}
                <div class="val-potentiel absolue">{{system.potentiel.maitrises}}</div>
                {{/if}}
                <img class="img-potentiel absolue" src="systems/penombre/assets/ui/potentiel_creux.png" alt="|" />
            </div>
        </div>
        <div class="maitrises{{#if isStyleJeuAvance}}-2{{/if}} absolue">
            <table class="item-list centpourcent">
                <tr class="centpourcent">
                    <th>
                        {{ localize 'PENOMBRE.ui.nom' }}
                    </th>
                    <th class="harmonique-width">
                        {{ localize 'PENOMBRE.ui.harmonique' }}
                    </th>
                    <th>
                        {{ localize 'PENOMBRE.ui.prerequis' }}
                    </th>
                    <th>
                        {{ localize 'PENOMBRE.ui.niveau' }}
                    </th>
                    <th class="item-controls">
                        {{#if unlocked}}
                            <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.create' item='une maîtrise' }}" data-action="create" data-type="maitrise"><i class="fas fa-plus"></i></a>
                        {{/if}}
                    </th>
                </tr>
                {{#each maitrises as |item id|}}
                <tr class="item">
                    <td>
                        <span class="item-name" data-tooltip="{{{item.system.description}}}">{{item.name}}</span>
                    </td>
                    <td class="harmonique-width">
                        <span class="item-type">{{ localize (concat 'PENOMBRE.Harmonique.' item.system.harmonique '.label') }}</span>
                    </td>
                    <td>
                        <span class="item-prerequis">{{item.system.prerequis}}</span>
                    </td>
                    <td>
                        <span class="item-niveau">{{item.system.niveau}}</span>
                    </td>
                    <td class="item-controls">
                    {{#if ../unlocked}}
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.edit' }}" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.delete' }}" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                    {{/if}}
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</div>