{{!log "roll-dialog" this}}
<div class="penombre-roll-dialog" data-actor-id="{{actor.id}}">

  <div class="line-1">
    <div class="part-left-1">
      <fieldset>
        <legend>Harmonique</legend>
        <label>{{label}}&nbsp;:</label>
        <input class="name" type="text" id="harmoniqueDice" name="harmoniqueDice" value={{harmoniqueDice}} />
        <div class="clearboth"><input type="checkbox" id="deMerveilleux" name="deMerveilleux" /><label>Plutôt le Dé merveilleux</label></div>
      </fieldset>
    </div>

    <div class="part-right-1">
      <div class="form-group difficulte">
        <label for="difficulte">{{localize "PENOMBRE.ui.difficulte"}}</label>
        <div class="form-fields">
          <select name="difficulte" id="difficulte">
            {{selectOptions choiceDifficulte selected=difficulte localize=true}}
          </select>
        </div>
      </div>
      <br>
      <fieldset>
        <div>
          <input type="checkbox" name="actionCollegiale" /><label>Action collégiale</label>
          <input type="checkbox" name="effetMagique" /><label>Effet magique</label>
        </div>
      </fieldset>
    </div>
  </div>

  <div class="line-2">
    <fieldset>
      <legend>Atouts</legend>
      <div class="defile-div">
      {{#each atouts}}
        <div class="atout atoutdata" data-bonus="{{this.system.valeur}}">
          <div class="nom">{{this.name}}</div>
          <div class="level">Niveau : {{this.system.valeur}}</div>
        </div>
      {{/each}}
      </div>
      <div class="bonustotal">
      <label>Bonus total des atouts :</label>
      <input type="number" id="bonusAtouts" name="bonusAtouts" value={{bonusAtouts}} readonly />
      </div>
    </fieldset>
  </div>

  <div class="line-3">
    <div class="part-left-3">

      <fieldset>
        <legend>Formule</legend>
        <input type="text" id="formule" name="formule" value={{formule}} />
      </fieldset>
      <div class="des-img">
        <img width="75" src="/systems/penombre/assets/ui/d4.png" />
        <img width="75" src="/systems/penombre/assets/ui/d6.png" />
        <img width="75" src="/systems/penombre/assets/ui/d8.png" />
        <img width="75" src="/systems/penombre/assets/ui/d10.png" />
        <img width="75" src="/systems/penombre/assets/ui/d12.png" />
        <img width="75" src="/systems/penombre/assets/ui/d20.png" />
      </div>
      <br>&nbsp;<br>
      <div class="form-group rollMode">
        <label for="rollMode">{{localize "CHAT.RollDefault"}}</label>
        <div class="form-fields">
          <select name="rollMode" id="rollMode">
            {{selectOptions rollModes selected=rollMode localize=true}}
          </select>
        </div>
      </div>
    </div>

    <div class="part-right-3">
      <fieldset>
        <legend>Jetons</legend>
        <div class="depensetotal">
          <label>Nombre de jetons à dépenser :</label>
          <div class="form-fields">
            <input type="number" id="jetons" name="jetons" />
          </div>
        </div>
        <fieldset>
          <div>
          <legend>Dépense automatique</legend>
          <label>Conscience :</label>
          {{formInput fieldJetonsConscience name="jetonsConscience" id="jetonsConscience"}}
          <label>Réserve collégiale :</label>
          {{formInput fieldJetonsReserve name="jetonsReserve" id="jetonsReserve"}}
          </div>
        </fieldset>
      </fieldset>
    </div>
  </div>

</div>