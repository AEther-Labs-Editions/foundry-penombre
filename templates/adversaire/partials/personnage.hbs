<div class="adversaire-personnage">
    <div class="logo-frame">
            <img class="logo-img" src="{{document.img}}" {{#if unlocked}}data-action="editImage"{{/if}} data-tooltip="{{document.name}}"/>
    </div>
    <div class="data">
            {{formGroup fields.name value=document.name localize=true disabled=locked}}

            {{formGroup systemFields.adversite.max value=systemSource.adversite.max localize=true}}
            {{formGroup systemFields.adversite.valeur value=systemSource.adversite.valeur localize=true}}
            {{formGroup systemFields.resilience.max value=systemSource.resilience.max localize=true}}
            {{formGroup systemFields.resilience.valeur value=systemSource.resilience.valeur localize=true}}
            {{formGroup systemFields.dissonance.harmonique value=systemSource.dissonance.harmonique localize=true}}
            {{formGroup systemFields.dissonance.max value=systemSource.dissonance.max localize=true}}
            {{formGroup systemFields.dissonance.valeur value=systemSource.dissonance.valeur localize=true}}
      </div>
</div>