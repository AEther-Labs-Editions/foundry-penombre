{{!log "AdversaireSheet - Partials - Actions" this }}
<div class="adversaire-actions">
    <span class="titre-section-actions"></span>
    <div class="content">
        <div class="actions absolue">
            <table class="item-list centpourcent">
                <tr class="centpourcent">
                    <th>
                        {{ localize 'PENOMBRE.ui.actions' }}
                    </th>
                    <th>
                        {{ localize 'PENOMBRE.ui.type' }}
                    </th>
                    <th class="item-controls">
                        {{#if unlocked}}
                            <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.create' item='une action' }}" data-action="create" data-type="action"><i class="fas fa-plus"></i></a>
                        {{/if}}
                    </th>
                </tr>
                {{#each actions as |item id|}}
                <tr class="item draggable" data-item-id="{{item._id}}">
                    <td>
                        <span class="item-name" data-tooltip="{{{item.system.description}}}">{{item.name}}</span>
                    </td>
                    <td>
                        <span class="item-type">{{localize (concat "PENOMBRE.Action.type." item.system.type ".label")}}</span>
                    </td>
                    <td class="item-controls">
                    {{#if ../unlocked}}
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.edit' }}" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.delete' }}" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                    {{/if}}
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</div>