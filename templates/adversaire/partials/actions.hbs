{{!log "AdversaireSheet - Partials - Actions" this }}
<div class="adversaire-actions">
    <div class="actions-adverses">
        <h2>Actions adverses</h2>
        <div class="actions">
            {{#each actionsAdverses as |item id|}}
                <div class="action item draggable" data-item-id="{{item._id}}">
                    <div class="nom">
                        {{item.name}}
                    </div>
                    <div class="description">
                        {{{item.system.description}}}
                    </div>
                    <div class="item-controls">
                        {{#if ../unlocked}}
                            <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.edit' }}" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                            <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.delete' }}" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    {{#if hasActionsDissonance}}
        <div class="actions-dissonance">
            <h2>Actions de dissonance</h2>
            <div class="actions">
                {{#each actionsDissonance as |item id|}}
                    <div class="action item draggable" data-item-id="{{item._id}}">
                        <div class="nom">
                            {{item.name}}
                        </div>
                        <div class="description">
                            {{{item.system.description}}}
                        </div>
                        <div class="item-controls">
                            {{#if ../unlocked}}
                                <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.edit' }}" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                                <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.delete' }}" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>    
    {{/if}}
</div>