{{!log "AdversaireSheet - Partials - Intrigues" this }}
<div class="adversaire-intrigues">
    <h2>Intrigues
       {{#if unlocked}}
            <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.create' item='une intrigue' }}" data-action="create" data-type="intrigue"><i class="fas fa-plus"></i></a>
        {{/if}}
    </h2>
    <div class="intrigues">
        {{#each intrigues as |item id|}}
            <div class="intrigue item draggable" data-item-id="{{item._id}}">
                <div class="nom">
                    {{item.name}}
                </div>
                <div class="description">
                    {{{item.system.description}}}
                </div>
                <div class="item-controls">
                    {{#if ../unlocked}}
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.edit' }}" data-action="edit" data-item-id="{{item._id}}"><i class="fas fa-edit"></i></a>
                        <a class="item-control" data-tooltip="{{ localize 'PENOMBRE.ui.delete' }}" data-action="delete" data-item-id="{{item._id}}"><i class="fas fa-trash"></i></a>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
</div>