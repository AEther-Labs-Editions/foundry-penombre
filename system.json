{
  "id": "penombre",
  "title": "Pénombre",
  "description": "Un jeu de rôle dans les Royaumes crépusculaires d'après les romans de Mathieu Gaborit",
  "authors": [{ "name": "Kristov" }, { "name": "Mystery Man From Outerspace" }],
  "version": "#{VERSION}#",  
  "url": "#{URL}#",
  "manifest": "#{MANIFEST}#",
  "download": "#{DOWNLOAD}#",  
  "compatibility": {
    "minimum": "13",
    "verified": "13",
    "maximum": "13"
  },
  "esmodules": ["penombre.mjs"],
  "styles": ["css/penombre.css"],
  "languages": [
    {
      "lang": "en",
      "name": "Anglais",
      "path": "lang/fr.json"
    },
    {
      "lang": "fr",
      "name": "Français",
      "path": "lang/fr.json"
    }
  ],
  "packFolders": [
    {
      "name": "Kit Demo",
      "sorting": "m",
      "color": "#a4653d",
      "packs": ["kit-pretires", "kit-pouvoirs-potentiels", "kit-adversaires"],
      "folders": []
    },
    {
      "name": "Système",
      "sorting": "m",
      "color": "#a4653d",
      "packs": ["journal", "landing-page"],
      "folders": []
    }
  ],
  "packs": [
    {
      "name": "journal",
      "label": "Journaux",
      "system": "penombre",
      "path": "packs/journal",
      "type": "JournalEntry",
      "ownership": {
        "PLAYER": "OBSERVER",
        "TRUSTED": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "name": "landing-page",
      "label": "Page d'accueuil",
      "system": "penombre",
      "path": "packs/landing-page",
      "type": "Scene",
      "ownership": {
        "PLAYER": "NONE",
        "TRUSTED": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "name": "kit-pretires",
      "label": "Kit - Prétirés",
      "system": "penombre",
      "path": "packs/kit-pretires",
      "type": "Actor",
      "ownership": {
        "PLAYER": "NONE",
        "TRUSTED": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "name": "kit-adversaires",
      "label": "Kit - Adversaires",
      "system": "penombre",
      "path": "packs/kit-adversaires",
      "type": "Actor",
      "ownership": {
        "PLAYER": "NONE",
        "TRUSTED": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    },
    {
      "name": "kit-pouvoirs-potentiels",
      "label": "Kit - Pouvoirs potentiels",
      "system": "penombre",
      "path": "packs/kit-pouvoirs-potentiels",
      "type": "Item",
      "ownership": {
        "PLAYER": "NONE",
        "TRUSTED": "OBSERVER",
        "ASSISTANT": "OWNER"
      }
    }
  ],
  "documentTypes": {
    "Actor": {
      "eminence": {},
      "adversaire": {}
    },
    "Item": {
      "pouvoir": { "htmlFields": ["description"] },
      "atout": { "htmlFields": ["description"] },
      "maitrise": { "htmlFields": ["description"] },
      "action": { "htmlFields": ["description"] },
      "intrigue": { "htmlFields": ["description"] }
    },
    "ChatMessage": {
      "harmonique": {}
    }
  },
  "socket": true,
  "flags": {
    "hotReload": {
      "extensions": ["css", "html", "hbs", "json"],
      "paths": ["css", "lang", "templates"]
    }
  },
  "background": "/systems/penombre/assets/background/splash_fond_penombre.avif"
}
