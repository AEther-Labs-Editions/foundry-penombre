{
  "id": "penombre",
  "title": "Pénombre",
  "description": "un jeu de rôle dans les Royaumes crépusculaires d'après les romans de Mathieu Gaborit",
  "authors": [{ "name": "Kristov" }, { "name": "Mystery Man From Outerspace" }],
  "compatibility": {
    "minimum": "13",
    "verified": "13",
    "maximum": "13"
  },
  "esmodules": ["penombre.mjs"],
  "styles": ["penombre.css"],
  "languages": [
    {
      "lang": "en",
      "name": "Anglais",
      "path": "lang/fr.json"
    },
    {
      "lang": "fr",
      "name": "Français",
      "path": "lang/fr.json"
    }
  ],
  "packFolders": [
    {
      "name": "FR - Système",
      "sorting": "a",
      "color": "#a4653d",
      "packs": ["journal", "landing-page"],
      "folders": []
    },
        {
      "name": "FR - Kit",
      "sorting": "a",
      "color": "#a4653d",
      "packs": ["pretires-du-kit-1", "adversaires-du-kit-2", "pouvoirs-potentiels-du-kit"],
      "folders": []
    }

  ],
  "packs": [
    {
      "name": "journal",
      "label": "FR - Journal",
      "system": "penombre",
      "path": "packs/journal",
      "type": "JournalEntry",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {}
    },
    {
      "name": "landing-page",
      "label": "Landing Page",
      "system": "penombre",
      "path": "packs/landing-page",
      "type": "Scene",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {}
    },
    {
      "name": "pretires-du-kit-1",
      "label": "Prétirés du kit 1",
      "system": "penombre",
      "path": "packs/pretires-du-kit-1",
      "type": "Actor",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {}
    },
    {
      "name": "adversaires-du-kit-2",
      "label": "Adversaires du kit 2",
      "system": "penombre",
      "path": "packs/adversaires-du-kit-2",
      "type": "Actor",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {}
    },
    {
      "name": "pouvoirs-potentiels-du-kit",
      "label": "Pouvoirs potentiels du kit",
      "system": "penombre",
      "path": "packs/pouvoirs-potentiels-du-kit",
      "type": "Item",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {}
    }
  ],
  "documentTypes": {
    "Actor": {
      "eminence": {},
      "adversaire": {}
    },
    "Item": {
      "pouvoir": { "htmlFields": ["description"] },
      "atout": { "htmlFields": ["description"] },
      "maitrise": { "htmlFields": ["description"] },
      "action": { "htmlFields": ["description"] },
      "intrigue": { "htmlFields": ["description"] }
    },
    "ChatMessage": {
      "harmonique": {}
    }
  },
  "socket": true,
  "flags": {
    "hotReload": {
      "extensions": ["css", "html", "hbs", "json"],
      "paths": ["css", "styles", "lang", "templates"]
    }
  },
  "background": "/systems/penombre/assets/background/splash_fond_penombre.avif"
}
